<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Principal.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA DE REGISTRO" FontSize="20" HorizontalTextAlignment="Center"/>

            <Label Text="Nombre" FontSize="18"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese su nombre"/>
            <Label Text="Apellido" FontSize="18"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese su apellido"/>
            <Label Text="Usuario" FontSize="18"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario"/>
            <Label Text="Contraseña" FontSize="18"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese su usuario"/>

            <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>